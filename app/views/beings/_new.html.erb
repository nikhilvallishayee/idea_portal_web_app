<%= form_for :beings,:html => { :multipart => true }, url: beings_path do |f| %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :short_description %><br>
    <%= f.text_area :short_description %>
  </p>
   
  <p>
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </p>
  
  <p>
    <%= f.label :phone %><br>
    <%= f.text_area :phone %>
  </p>

  <p>
    <%= f.label :link_facebook %><br>
    <%= f.text_area :link_facebook %>
  </p>
  
  <p>
    <%= f.label :link_twitter %><br>
    <%= f.text_area :link_twitter %>
  </p>
  
  <p>
    <%= f.label :link_flickr %><br>
    <%= f.text_area :link_flickr %>
  </p>

  <p>
    <%= f.file_field :photo %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
 
 <% end %> 