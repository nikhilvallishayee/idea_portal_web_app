<div class="row">
<div class="portlet box blue col-md-offset-2 col-md-8">
  <div class="portlet-title">
    <div class="caption">
      Add People
    </div>
  </div>
  <div class="portlet-body col-md-12">
    <%= form_for :beings,:html => { :multipart => true , :id=>'beings',class:'form-horizontal' }, url: beings_path do |f| %>
        <div class="form-group">
          <%= f.label :name , class:'control-label col-md-3' %>
          <div class="col-md-4">
            <%= f.text_field :name , class:'form-control'%>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :short_description , class:'control-label col-md-3' %>
          <div class="col-md-4">
            <%= f.text_field :short_description ,class:'form-control'%>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email , class:' control-label col-md-3'%>
          <div class="col-md-4">
            <%= f.text_field :email , class:'form-control'%>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :phone , class:' control-label col-md-3'%>
          <div class="col-md-4">
            <%= f.text_field :phone , class:'form-control'%>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :link_facebook , class:'control-label col-md-3'%>
          <div class="col-md-4">
            <%= f.text_field :link_facebook ,class:'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :link_twitter , class:'control-label col-md-3'%>
          <div class="col-md-4">
            <%= f.text_field :link_twitter , class:'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :link_flickr , class:'control-label col-md-3' %>
          <div class="col-md-4">
            <%= f.text_field :link_flickr ,class:'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :is_team_member , class:'control-label col-md-3' %>
          <div class="col-md-4">
            <%= f.check_box :is_team_member  %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :Picture , class:' control-label col-md-3' %>
          <div class="col-md-4">
              <%= f.file_field :photo %>
          </div>
        </div>
        <div class="form-group">

          <div class="col-md-offset-3 col-md-4">
              <img id="preview_image" src="#" alt="image" />
          </div>
        </div>

        <div class ="col-md-offset-3">
          <input type="button" name="btn-save" class="btn btn-primary" value="Create Being" id="btn-being-save">
          <input type="button" name="btn-cancel" class="btn btn-cancel" value="Cancel" id="btn-being-cancel-save">
        </div>


    <% end %>
  </div>
</div>
</div>